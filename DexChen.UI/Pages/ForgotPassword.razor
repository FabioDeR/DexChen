@page "/forgot-password"
@inject NavigationManager NavigationManager

<div class="auth-container">
    <div class="auth-card">
        <img src="dexchenlogo.png" alt="DexChen Logo" class="auth-logo" />
        <h1 class="auth-title">Récupération</h1>
        
        @if (!emailSent)
        {
            <p class="auth-subtitle">Entrez votre adresse email pour recevoir un lien de réinitialisation de mot de passe</p>

            <div class="form-group">
                <label for="email">Email</label>
                <div class="input-with-icon">
                    <i class="fas fa-envelope"></i>
                    <input type="email" id="email" class="form-control" @bind="email" placeholder="votre@email.com" />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">
                    @errorMessage
                </div>
            }

            <button class="btn-primary" @onclick="HandleForgotPassword">
                <span>Envoyer les instructions</span>
                <i class="fas fa-paper-plane"></i>
            </button>
        }
        else
        {
            <div class="success-message">
                <i class="fas fa-check-circle"></i>
                <div>
                    <h3>Email envoyé !</h3>
                    <p>Les instructions de réinitialisation du mot de passe ont été envoyées à <strong>@email</strong></p>
                </div>
            </div>
            
            <p class="check-inbox">Vérifiez votre boîte de réception et suivez les instructions pour réinitialiser votre mot de passe.</p>
            
            <div class="auth-info">
                <i class="fas fa-info-circle"></i>
                <p>Si vous ne recevez pas d'email dans les prochaines minutes, vérifiez votre dossier spam.</p>
            </div>
        }

        <div class="auth-links">
            <a href="/login" class="link-secondary">
                <i class="fas fa-arrow-left"></i>
                Retour à la connexion
            </a>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string errorMessage = "";
    private bool emailSent = false;

    private async Task HandleForgotPassword()
    {
        if (string.IsNullOrWhiteSpace(email))
        {
            errorMessage = "Veuillez entrer votre adresse email";
            return;
        }

        try
        {
            // TODO: Implémentation réelle de l'envoi d'email
            // Pour la démo, on simule un succès
            await Task.Delay(1000); // Simule un délai réseau
            emailSent = true;
            errorMessage = "";
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }
} 