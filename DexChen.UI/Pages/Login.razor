@using Supabase.Gotrue
@page "/login"


<div class="auth-container">
    <div class="auth-card">
        <img src="dexchenlogo.png" alt="DexChen Logo" class="auth-logo" />
        <h1 class="auth-title">Connexion</h1>

        <div class="form-group">
            <label for="email">Email</label>
            <div class="input-with-icon">
                <i class="fas fa-envelope"></i>
                <input type="email" id="email" class="form-control" @bind="email" placeholder="votre@email.com" />
            </div>
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <div class="input-with-icon">
                <i class="fas fa-lock"></i>
                <input type="@(showPassword ? "text" : "password")" id="password" class="form-control" @bind="password" placeholder="••••••••" />
                <button type="button" class="toggle-password" @onclick="TogglePasswordVisibility">
                    <i class="fas @(showPassword ? "fa-eye-slash" : "fa-eye")"></i>
                </button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-message">
                @errorMessage
            </div>
        }

        <button class="btn-primary" @onclick="HandleLogin">
            <span>Se connecter</span>
            <i class="fas fa-arrow-right"></i>
        </button>

        <div class="auth-links">
            <a href="/register" class="link-secondary">Créer un compte</a>
            <a href="/forgot-password" class="link-secondary">Mot de passe oublié ?</a>
        </div>
    </div>
</div>




